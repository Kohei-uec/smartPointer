{
    "manifest_version": 2,
    "name": "Smart Pointer",
    "version": "1.0",
    "description": "add pointer controlled by smart phone",
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css":["screen.css"]
    }],
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
        "default_icon": {
            "16": "/icon16.png",
            "32": "/icon32.png"
        },
        "default_popup": "popup.html"
    }
}